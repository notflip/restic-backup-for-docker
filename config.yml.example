# restic/config.yml

# Global Restic & AWS settings
restic:
  repository: ""
  password: ""
  aws:
    access_key_id: ""
    secret_access_key: ""
  log_dir: "./logs"
  volume_base_path: "/var/lib/docker/volumes"
  lock_timeout: 30

# Retention policy
retention:
  keep_daily:   7
  keep_weekly:  4
  keep_monthly: 12

# Healthchecks endpoint (no trailing slash)
healthchecks_url: ""

# Perâ€‘project volume lists
projects:
  site:
    volumes:
      - volume1
      - volume2